{
  "name": "datocms-plugin-theme-selector",
  "description": "A plugin for DatoCMS that allows you select a color from a predefined list.",
  "version": "1.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "prepublishOnly": "yarn build"
  },
  "keywords": [
    "datocms",
    "datocms-plugin",
    "field-editor",
    "color-editor",
    "color",
    "theme",
    "colour"
  ],
  "datoCmsPlugin": {
    "title": "Theme selector",
    "previewImage": "docs/example.png",
    "entryPoint": "dist/index.html",
    "fieldTypes": [
      "color"
    ],
    "pluginType": "field_editor",
    "parameters": {
      "global": [
        {
          "id": "colors",
          "label": "Global Colors",
          "type": "string",
          "hint": "List colors the editor can select between. Delimit colors with a comma."
        }
      ],
      "instance": [
        {
          "id": "colors",
          "label": "Preset colors",
          "type": "string",
          "hint": "List colors the editor can select between. Delimit colors with a comma."
        }
      ]
    }
  },
  "dependencies": {
    "polished": "^4.1.2",
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "prettier": "^2.3.0",
    "vite": "^2.3.3"
  }
}
